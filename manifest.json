{
    "name": "locker",
    "description": "Manage passwords and temporary e-mails address",
    "manifest_version": 2,
    "version" : "0.1",
    "author": "Augustin LAOUAR - Thinhinane ZEDDAM",
    "icons": {
        "48": "icons/icon_test.svg"
      },
    "browser_action": {
        "default_area": "navbar",
        "default_icon": "icons/icon_test.svg",
        "default_popup" :"html/popup.html",
        "default_title": "locker"
    },

    "background": {
        "scripts": ["scripts/background.js"]
    },

    "permissions": [
        "storage",
        "tabs"
      ],

      "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["scripts/content-script.js"], 
          "run_at": "document_end"
        }
      ]


}