{
    "name": "locker",
    "description": "Manage passwords and temporary e-mails address",
    "manifest_version": 2,
    "version" : "1.0",
    "author": "Augustin LAOUAR - Thinhinane ZEDDAM",
    "icons": {
        "48": "icons/temp_icon.jpg"
      },
    "browser_action": {
        "default_area": "navbar",
        "default_icon": "icons/temp_icon.jpg",
        "default_popup" :"html/emails.html",
        "default_title": "locker"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "augustinlaouar@hotmail.com"
      }
    },
    "background": {
        "scripts": ["scripts/backgroundScripts/background.js"]
    },

    "permissions": [
        "storage",
        "tabs",
        "cookies",
        "<all_urls>"
      ],

      "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["scripts/content-script.js"], 
          "run_at": "document_end"
        }
      ]
}